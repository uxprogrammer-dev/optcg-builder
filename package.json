{
  "name": "optcg-deck-builder",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "workspaces": [
    "apps/web"
  ],
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main.js",
    "build": "npm run build:server && npm run web:build",
    "build:server": "nest build",
    "lint": "eslint \"{src,apps}/**/*.{ts,tsx}\" --max-warnings=0",
    "test": "jest",
    "format": "prettier --check .",
    "dev": "concurrently \"npm run start:dev\" \"npm run web:dev\"",
    "web:dev": "npm run dev --workspace apps/web",
    "web:build": "npm run build --workspace apps/web",
    "web:start": "npm run start --workspace apps/web",
    "leaders:index": "ts-node scripts/generate-leader-index.ts"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^10.3.2",
    "@nestjs/config": "^3.2.1",
    "@nestjs/core": "^10.3.2",
    "@nestjs/platform-express": "^10.3.2",
    "@nestjs/serve-static": "^4.0.0",
    "archiver": "^6.0.1",
    "axios": "^1.6.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "joi": "^17.11.0",
    "openai": "^4.26.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.3.2",
    "@types/archiver": "^6.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.10.4",
    "@types/uuid": "^9.0.7",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-config-prettier": "^9.0.0",
    "concurrently": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  }
}

